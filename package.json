  "scripts": {
    "e2e": "cross-env npx nestia e2e --config nestia.config.ts & ts-node .\\test\\index.ts",
    "swagger": "npx nestia swagger --config nestia.config.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "cross-env NODE_ENV=dev TZ=Asia/Seoul nest start --watch",
    "start:qa": "cross-env NODE_ENV=qa TZ=Asia/Seoul nest start",
    "start:prod": "node dist/main",
    "build": "nest build",
    "start:debug": "nest start --debug --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestia/core": "^3.2.1",
    "@nestia/e2e": "^0.4.3",
